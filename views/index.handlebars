<div class="container bg center-align">
    <h1>Cheeseburger Devourer</h1>
    <div>
        <img src="https://media.giphy.com/media/qXIEjuFSbNY5O/giphy.gif">
    </div>
    <div class="row">
        <div class="col s6">
            <div id="burger">
                <div>
                    <h5>These burgers need to be devoured! Get over here!</h5>
                </div>
            </div>
            <br>
            <div id="burger">
                <ul>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <li>
                                <p>{{this.id}}
                                {{this.burger_name}}</p>

                                <form action="/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button class="btn waves-effect waves-light" type="submit">Devour It!</button>
                                </form>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col s6">
            <div id="burger">
                <div>
                    <h5>These burgers have already been devoured! Go somewhere else!</h5>
                </div>
            </div>
            <br>
            <div id="burger">
                <ul>
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <li>
                                <p>{{this.id}}
                                {{this.burger_name}}</p>
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <h5>Add a burger!</h5>
        </div>
        <form class="create-update-form" action="/" method="POST">
            <div class="input-field inline">
                <label for="ca">Burger Name: </label>
                <textarea type="text" id="ca" name="burger_name" class="materialize-textarea"></textarea>
            </div>
            <div>
                <button class="btn waves-effect waves-light" type="submit">Add Burger</button>
            </div>
        </form>
    </div>
</div>