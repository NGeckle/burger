<div class="container bg">
    <h1>Cheeseburger Devourer</h1>

    <div class="row">
        <div class="col-sm-6">
            <h2>These burgers need to be devoured! Get over here!</h2>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                        {{this.id}}
                        {{this.burger_name}}

                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btn-primary" type="submit">Devour It!</button>
                        </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2>These burgers have already been devoured! Go somewhere else!</h2>
            {{#each burgers}}
                {{#if this.devoured}}
                    <li>
                        {{this.id}}
                        {{this.burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <h2>Add a burger</h2>
        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>